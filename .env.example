# Environment Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=petro_rag
GROQ_API_KEY=your_groq_api_key_here

# Optional: For vision model (if using alternative provider)
OPENAI_API_KEY=your_openai_api_key_here

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=petro_rag_vectors
QDRANT_API_KEY=  # Leave empty for local, set for Qdrant Cloud

# File Storage
UPLOAD_DIR=./uploads
IMAGES_DIR=./extracted_images

# Chunking Configuration
CHUNK_OVERLAP_PERCENTAGE=0.20

# LlamaIndex Settings
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
