# ==========================================
# PetroRAG Environment Configuration
# ==========================================

# ------------------------------------------
# MongoDB Configuration
# ------------------------------------------
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=petro_rag

# ------------------------------------------
# MongoDB Collection Names
# ------------------------------------------
DOCUMENTS_COLLECTION=rag_documents
CATEGORIES_COLLECTION=rag_categories
CHUNKS_COLLECTION=rag_chunks
IMAGES_COLLECTION=rag_images
TABLES_COLLECTION=rag_tables
CHATS_COLLECTION=rag_chats


# ------------------------------------------
# GROQ API Configuration
# ------------------------------------------
GROQ_API_KEY=gsk_abc123
QWEN_TEXT_MODEL=qwen/qwen3-32b
GROQ_VISION_MODEL=meta-llama/llama-4-maverick-17b-128e-instruct
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=5000

#-------------------------------------------
# LLM Guard
#-------------------------------------------
GUARD_THRESHOLD=0.1

# ------------------------------------------
# OpenAI Configuration (Optional)
# ------------------------------------------
# Used for vision tasks if using an alternative provider
OPENAI_API_KEY=your_openai_api_key_here

# ------------------------------------------
# Qdrant Vector Database Configuration
# ------------------------------------------
QDRANT_URL=http://localhost:6333
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=petro_rag_vectors
QDRANT_API_KEY=

# ------------------------------------------
# File Storage Paths
# ------------------------------------------
UPLOAD_DIR=./uploads
IMAGES_DIR=./extracted_images
MAX_IMAGE_WIDTH=800

# ------------------------------------------
# Chunking Configuration
# ------------------------------------------
# Note: Keeping your existing 0.00, though the app default was 0.20
CHUNK_OVERLAP_PERCENTAGE=0.20
MIN_CHUNK_SIZE=100
MAX_CHUNK_SIZE=2000

# --------------------------s----------------
# LlamaIndex & Embedding Configuration
# ------------------------------------------
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5

# ------------------------------------------
# Chat Configuration
# ------------------------------------------
CHAT_IMAGES_DIR=./chat_images
CHAT_CONTEXT_WINDOW=10
MAX_CHAT_IMAGES=10

# ------------------------------------------
# Reranking Configuration
# ------------------------------------------
USE_RERANKER=true
RERANK_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
RERANK_TOP_K=10        # Final number of results to return after reranking
SIMILARITY_THRESHOLD=0.0
TOP_K=60               # Initial number of results to fetch from search (before reranking)

# ------------------------------------------
# Logging Configuration
# ------------------------------------------
LOG_LEVEL=INFO
LOG_DIR=./logs
LOG_JSON=true